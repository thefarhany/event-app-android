<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="8dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTicketName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Standard Ticket"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:text="Standard Ticket" />

        <TextView
            android:id="@+id/tvTicketQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2x Rp 150.000"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="2dp"
            tools:text="2x Rp 150.000" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvTicketSubtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp 300.000"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="end"
        tools:text="Rp 300.000" />

</LinearLayout>
